@model IEnumerable<Libreria.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar</a>
</p>
@Html.AntiForgeryToken()
<table class="table" id="Categorias">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CodigoCategoria" class="btn btn-sm btn-info">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.CodigoCategoria" class="btn btn-sm btn-warning">Detalles</a>
                    <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("DeleteConfirmed", "Categorias", new { id = item.CodigoCategoria })', this)" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/site.js"></script>
<script>
    createDataTable("Categorias");
</script>
